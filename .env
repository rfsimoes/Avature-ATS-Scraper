# Environment Configuration for Avature Scraper
# Copy this file to .env and configure your environment

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/avature_scraper

# Redis Configuration (for Celery)
REDIS_URL=redis://localhost:6379/0

# Scraping Configuration
MAX_WORKERS=10
REQUEST_DELAY=0.2
MAX_RETRIES=3

# Discovery Configuration
DNS_TIMEOUT=5
HTTP_TIMEOUT=10
MAX_DISCOVERY_WORKERS=5

# Monitoring Configuration
PROMETHEUS_PORT=8000
HEALTH_CHECK_INTERVAL=300

# Data Retention
JOB_RETENTION_DAYS=90
LOG_RETENTION_DAYS=30
EXTRACTION_RUN_RETENTION_DAYS=30

# Rate Limiting
REQUESTS_PER_MINUTE=60
BURST_REQUESTS=10

# Alerting (optional)
SLACK_WEBHOOK_URL=
EMAIL_SMTP_SERVER=
EMAIL_USERNAME=
EMAIL_PASSWORD=
EMAIL_RECIPIENTS=admin@company.com

# Development/Debug
DEBUG=false
LOG_LEVEL=INFO